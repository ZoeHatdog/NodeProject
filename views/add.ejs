<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <!-- Montserrat Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/css/forms.css">
    <style>
        .rotate-90 {
            transform: rotate(90deg);
            transition: transform 0.3s;
        }
        .rotate-0 {
            transform: rotate(0deg);
            transition: transform 0.3s;
        }
    </style>
</head>
<body>
    <div class="grid-container">
        <!-- Header -->
        <header class="header">
            <div class="menu-icon" onclick="openSidebar()">
                <span class="material-icons-outlined">menu</span>
            </div>
            <div class="header-left">
                <span class="material-icons-outlined">search</span>
            </div>
            <div class="header-right">
                <span class="material-icons-outlined">notifications</span>
                <span class="material-icons-outlined">email</span>
                <span class="material-icons-outlined" id="accountCircle" onclick="toggleDropdown()">account_circle</span>
                <div id="dropdownMenu" class="dropdown">
                    <a href="#">Profile</a>
                    <a href="#">Settings</a>
                    <a class="dropdown-item" href="/logout">Logout</a>
                </div>
            </div>
        </header>
        <!-- End Header -->

        <!-- Sidebar -->
        <aside id="sidebar">
            <div class="sidebar-title">
                <div class="sidebar-brand">
                    <span class="material-icons-outlined">groups</span> SPI HR Management
                </div>
                <span class="material-icons-outlined" onclick="closeSidebar()">close</span>
            </div>

            <ul class="sidebar-list">
                <li class="sidebar-list-item">
                    <a href="/dashboard" target="_self">
                        <span class="material-icons-outlined">dashboard</span> Dashboard
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="/registration">
                        <span class="material-icons-outlined add-employee-icon">inventory_2</span> Add Employee
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#">
                        <span class="material-icons-outlined delete-employee-icon">fact_check</span> Delete Employee
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#">
                        <span class="material-icons-outlined update-employee-icon">add_shopping_cart</span> Update Employee
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#">
                        <span class="material-icons-outlined">shopping_cart</span> See Data
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#">
                        <span class="material-icons-outlined">poll</span> Reports
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#">
                        <span class="material-icons-outlined">settings</span> Upload 
                    </a>
                </li>
            </ul>
        </aside>
        <!-- End Sidebar -->

        <!-- Main -->
        <main class="main-container">
            <div class="container mt-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0 d-flex justify-content-between align-items-center">
                            Employee Information
                        </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <button class="btn btn-link w-100 d-flex justify-content-between align-items-center btn-personal-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePersonal" aria-expanded="false" aria-controls="collapsePersonal">
                                Personal Information
                                <span id="personalToggleIcon" class="material-icons-outlined rotate-0">expand_more</span>
                            </button>
                            <div id="collapsePersonal" class="collapse">
                                <div class="card-body">
                                    <div class="mb-3">
                                        <div class="row">
                                            <div class="col">
                                                <label for="empNumber" class="form-label">Employee Number</label>
                                                <input type="text" class="form-control" id="empNumber" placeholder="Enter employee number">
                                            </div>
                                            <div class="col">
                                                <label for="empID" class="form-label">Employee ID</label>
                                                <input type="text" class="form-control" id="empID" placeholder="Enter employee ID">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col">
                                                <label for="firstName" class="form-label">First Name</label>
                                                <input type="text" class="form-control" id="firstName" placeholder="Enter first name">
                                            </div>
                                            <div class="col">
                                                <label for="middleName" class="form-label">Middle Name</label>
                                                <input type="text" class="form-control" id="middleName" placeholder="Enter middle name">
                                            </div>
                                            <div class="col">
                                                <label for="lastName" class="form-label">Last Name</label>
                                                <input type="text" class="form-control" id="lastName" placeholder="Enter last name">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col">
                                                <label for="birthday" class="form-label">Birthday</label>
                                                <input type="date" class="form-control" id="birthday" placeholder="Enter birthday" onchange="calculateAge()">
                                            </div>
                                            <div class="col">
                                                <label for="age" class="form-label">Age</label>
                                                <input type="text" class="form-control" id="age" placeholder="Age" readonly>
                                            </div>
                                            <div class="col">
                                                <label for="gender" class="form-label">Gender</label>
                                                <select class="form-select" id="gender">
                                                    <option selected>Choose...</option>
                                                    <option value="male">Male</option>
                                                    <option value="female">Female</option>
                                                    <option value="other">Other</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="nickname" class="form-label">Nickname</label>
                                        <input type="text" class="form-control" id="nickname" placeholder="Enter nickname">
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <button class="btn btn-link w-100 d-flex justify-content-between align-items-center btn-other-information" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOther" aria-expanded="false" aria-controls="collapseOther">
                                Other Information
                                <span id="otherToggleIcon" class="material-icons-outlined rotate-0">expand_more</span>
                            </button>
                            <div id="collapseOther" class="collapse">
                                <div class="card-body">
                                    <div class="mb-3">
                                        <div class = "row">
                                            <div class = "col">
                                                <label for="religion" class="form-label">Religion</label>
                                                <input type="text" class="form-control" id="religion" placeholder="Enter religion">
                                            </div>
                                            <div class = "col">
                                                <label for="email" class="form-label">Email</label>
                                                <input type="email" class="form-control" id="email" placeholder="Enter email, eg:sample-email@gmail.com">
                                            </div>
                                        </div>
                                        <br>
                                        <div class = "row">
                                            <div class = "col">
                                                <label for="emergencyContactPerson" class="form-label">Person to Notify in Case of Emergency</label>
                                                <input type="text" class="form-control" id="emergencyContactPerson" placeholder="Enter name">
                                            </div>
                                            <div class = "col">
                                                <label for="emergencyContactNumber" class="form-label">Number to Contact</label>
                                                <input type="tel" class="form-control" id="emergencyContactNumber" placeholder="Enter phone number for person to notify in case of emergency">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        
                        <li class="list-group-item">
                            <button class="btn btn-link w-100 d-flex justify-content-between align-items-center btn-educational-background" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEducation" aria-expanded="false" aria-controls="collapseEducation">
                                Educational Background
                                <span id="educationToggleIcon" class="material-icons-outlined rotate-0">expand_more</span>
                            </button>
                            <div id="collapseEducation" class="collapse">
                                <div class="card-body">
                                    <div class = "row">
                                        <div class = "col">
                                            <div class="mb-3">
                                                <label for="educationalAttainment" class="form-label">Educational Attainment</label>
                                                <input type="text" class="form-control" id="educationalAttainment" placeholder="Enter educational attainment">
                                            </div>
                                        </div>
                                        <div class = "col">
                                            <div class="mb-3">
                                                <label for="course" class="form-label">Course</label>
                                                <input type="text" class="form-control" id="course" placeholder="Enter course">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </li> 
                        <br>
                        <button class="btn btn-danger" type="button" data-bs-toggle="modal" data-bs-target="#nextModal">
                            Next
                        </button>
                        
                    </ul>
                </div>
            </div>
        </main>

        <!-- Bootstrap JS and dependencies -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        <script>
            // Calculate Age based on Birthday
            function calculateAge() {
                var birthday = document.getElementById('birthday').value;
                var ageInput = document.getElementById('age');
                if (birthday) {
                    var birthDate = new Date(birthday);
                    var today = new Date();
                    var age = today.getFullYear() - birthDate.getFullYear();
                    var month = today.getMonth() - birthDate.getMonth();
                    if (month < 0 || (month === 0 && today.getDate() < birthDate.getDate())) {
                        age--;
                    }
                    ageInput.value = age;
                }
            }

            document.addEventListener('DOMContentLoaded', function () {
                var collapsePersonal = document.getElementById('collapsePersonal');
                var personalToggleIcon = document.getElementById('personalToggleIcon');
                
                // Add event listeners to toggle icon
                collapsePersonal.addEventListener('show.bs.collapse', function () {
                    personalToggleIcon.classList.remove('rotate-0');
                    personalToggleIcon.classList.add('rotate-90');
                });

                collapsePersonal.addEventListener('hide.bs.collapse', function () {
                    personalToggleIcon.classList.remove('rotate-90');
                    personalToggleIcon.classList.add('rotate-0');
                });
                
                // Repeat for other collapsibles
                var collapseOther = document.getElementById('collapseOther');
                var otherToggleIcon = document.getElementById('otherToggleIcon');

                collapseOther.addEventListener('show.bs.collapse', function () {
                    otherToggleIcon.classList.remove('rotate-0');
                    otherToggleIcon.classList.add('rotate-90');
                });

                collapseOther.addEventListener('hide.bs.collapse', function () {
                    otherToggleIcon.classList.remove('rotate-90');
                    otherToggleIcon.classList.add('rotate-0');
                });

                var collapseEducation = document.getElementById('collapseEducation');
                var educationToggleIcon = document.getElementById('educationToggleIcon');

                collapseEducation.addEventListener('show.bs.collapse', function () {
                    educationToggleIcon.classList.remove('rotate-0');
                    educationToggleIcon.classList.add('rotate-90');
                });

                collapseEducation.addEventListener('hide.bs.collapse', function () {
                    educationToggleIcon.classList.remove('rotate-90');
                    educationToggleIcon.classList.add('rotate-0');
                });
            });
        </script>
    </div>
</body>
</html>
