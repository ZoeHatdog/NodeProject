        <!-- Bootstrap JS and dependencies -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        <script>
            // Calculate Age based on Birthday
            function calculateAge() {
                var birthday = document.getElementById('birthday').value;
                var ageInput = document.getElementById('age');
                if (birthday) {
                    var birthDate = new Date(birthday);
                    var today = new Date();
                    var age = today.getFullYear() - birthDate.getFullYear();
                    var month = today.getMonth() - birthDate.getMonth();
                    if (month < 0 || (month === 0 && today.getDate() < birthDate.getDate())) {
                        age--;
                    }
                    ageInput.value = age;
                }
            }
            function toggleInputs(groupId) {
                const inputGroup = document.getElementById(groupId);
                if (inputGroup.classList.contains('d-none')) {
                    inputGroup.classList.remove('d-none');
                } else {
                    inputGroup.classList.add('d-none');
                }
            }
            function toggleSeparationFields() {
                    var select = document.getElementById('Active');
                    var separationFields = document.getElementById('separationFields');
                                
                    if (select.value === 'No') {
                        separationFields.classList.remove('d-none');
                        } else {
                    separationFields.classList.add('d-none');
                        }
            }

            function toggleAllowanceInput() {
                var checkbox = document.getElementById("allowanceCheckbox");
                var inputGroup = document.getElementById("allowanceInputGroup");

                if (checkbox.checked) {
                    inputGroup.classList.remove("d-none");
                } else {
                    inputGroup.classList.add("d-none");
                }
            }
            function calculateLOS() {
                var comm = document.getElementById('Commencement').value;
                var los = document.getElementById('LOS');
                if (comm) {
                    var commDate = new Date(comm);
                    var today = new Date();
                    var age = today.getFullYear() - commDate.getFullYear();
                    var month = today.getMonth() - commDate.getMonth();
                    if (month < 0 || (month === 0 && today.getDate() < commDate.getDate())) {
                        age--;
                    }
                    los.value = age;
                }
            }
           

            document.addEventListener('DOMContentLoaded', function () {
                var collapsePersonal = document.getElementById('collapsePersonal');
                var personalToggleIcon = document.getElementById('personalToggleIcon');
                var collapseCompany = document.getElementById('collapseCompany');
                var CompanyToggleIcon = document.getElementById('CompanyToggleIcon');
                
                
                // Add event listeners to toggle icon
                collapsePersonal.addEventListener('show.bs.collapse', function () {
                    personalToggleIcon.classList.remove('rotate-0');
                    personalToggleIcon.classList.add('rotate-90');
                });

                collapsePersonal.addEventListener('hide.bs.collapse', function () {
                    personalToggleIcon.classList.remove('rotate-90');
                    personalToggleIcon.classList.add('rotate-0');
                });
                collapseCompany.addEventListener('show.bs.collapse', function() {
                    CompanyToggleIcon.classList.remove('rotate-0');
                    CompanyToggleIcon.classList.add('rotate-90');
                })
                collapseCompany.addEventListener('hide.bs.collapse', function() {
                    CompanyToggleIcon.classList.remove('rotate-90');
                    CompanyToggleIcon.classList.add('rotate-0');
                })
                // Repeat for other collapsibles
                var collapseOther = document.getElementById('collapseOther');
                var otherToggleIcon = document.getElementById('otherToggleIcon');
                var CollapsePAF = document.getElementById('CollapsePAF');
                var PAFToggleIcon = document.getElementById('PAFToggleIcon');

                collapseCompany.addEventListener('show.bs.collapse', )

                CollapsePAF.addEventListener('show.bs.collapse', function () {
                    PAFToggleIcon.classList.remove('rotate-0');
                    PAFToggleIcon.classList.add('rotate-90');
                });

                CollapsePAF.addEventListener('hide.bs.collapse', function () {
                    PAFToggleIcon.classList.remove('rotate-90');
                    PAFToggleIcon.classList.add('rotate-0');
                });



                collapseOther.addEventListener('show.bs.collapse', function () {
                    otherToggleIcon.classList.remove('rotate-0');
                    otherToggleIcon.classList.add('rotate-90');
                });

                collapseOther.addEventListener('hide.bs.collapse', function () {
                    otherToggleIcon.classList.remove('rotate-90');
                    otherToggleIcon.classList.add('rotate-0');
                });

                var collapseEducation = document.getElementById('collapseEducation');
                var educationToggleIcon = document.getElementById('educationToggleIcon');

                collapseEducation.addEventListener('show.bs.collapse', function () {
                    educationToggleIcon.classList.remove('rotate-0');
                    educationToggleIcon.classList.add('rotate-90');
                });

                collapseEducation.addEventListener('hide.bs.collapse', function () {
                    educationToggleIcon.classList.remove('rotate-90');
                    educationToggleIcon.classList.add('rotate-0');
                });
                
            });
            document.getElementById('nextButton').addEventListener('click', function() {
                document.getElementById('employeeInfoCard').classList.add('d-none');
                document.getElementById('companyDetailsCard').classList.remove('d-none');
        });
            document.getElementById('backBtn').addEventListener('click', function() {
                document.getElementById('employeeInfoCard').classList.remove('d-none');
                document.getElementById('companyDetailsCard').classList.add('d-none');
            });

        </script>
    </div>
