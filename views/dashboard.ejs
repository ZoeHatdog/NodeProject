<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Admin Dashboard</title>

    <!-- Montserrat Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/css/sample.css">
</head>
<body>
    <div class="grid-container">

        <!-- Header -->
        <header class="header">
            <div class="menu-icon" onclick="openSidebar()">
                <span class="material-icons-outlined">menu</span>
            </div>
            <div class="header-left">
                <span class="material-icons-outlined">search</span>
            </div>
            <div class="header-right">
                <span class="material-icons-outlined">notifications</span>
                <span class="material-icons-outlined">email</span>
                <span class="material-icons-outlined">account_circle</span>
            </div>
        </header>
        <!-- End Header -->

        <!-- Sidebar -->
        <aside id="sidebar">
            <div class="sidebar-title">
                <div class="sidebar-brand">
                    <span class="material-icons-outlined">groups</span> SPI HR Management
                </div>
                <span class="material-icons-outlined" onclick="closeSidebar()">close</span>
            </div>

            <ul class="sidebar-list">
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">dashboard</span> Dashboard
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">inventory_2</span> Add Employee
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">fact_check</span> Delete Employee
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">add_shopping_cart</span> Update Employee
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">shopping_cart</span> See Data
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">poll</span> Reports
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">settings</span> Upload 
                    </a>
                </li>
            </ul>
        </aside>
        <!-- End Sidebar -->

        <!-- Main -->
        <main class="main-container">
            <div class="main-title">
                <p class="font-weight-bold">DASHBOARD</p>
            </div>
            <div class = "see-user">
                <h1>Welcome, <%= username %>!</h1>
            </div>
            <div class="main-cards">

                <div class="card">
                    <div class="card-inner">
                        <p class="text-primary">Total Employees</p>
                        <span class="material-icons-outlined text-blue">groups</span>
                    </div>
                    <span class="text-primary font-weight-bold"> <%= TotalEmployees %></span>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <p class="text-primary"> Active Employees </p>
                        <span class="material-icons-outlined text-orange">boy</span>
                    </div>
                    <span class="text-primary font-weight-bold"> <%= activeCount %></span>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <p class="text-primary"> Inactive Employees </p>
                        <span class="material-icons-outlined text-green">directions_run</span>
                    </div>
                    <span class="text-primary font-weight-bold"> <%= inactiveCount %> </span>
                </div>

                <div class="card">
                    <div class="card-inner">
                        <p class="text-primary">Registered Users</p>
                        <span class="material-icons-outlined text-red">passkey</span>
                    </div>
                    <span class="text-primary font-weight-bold"><%= RegisteredUsers %></span>
                </div>

            </div>

            <div class="charts">

                <div class="charts-card">
                    <p class="chart-title">No. of Employees Added</p>
                    <canvas id="chart3" width="200" height="200"></canvas>
                    <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            fetch('/data?chartId=chart3')
                                .then(response => response.json())
                                .then(data => {
                                    const labels = data.map(item => item.year);
                                    const values = data.map(item => item.number_of_employees);
                
                                    const ctx = document.getElementById('chart3').getContext('2d');
                                    new Chart(ctx, {
                                        type: 'bar',
                                        data: {
                                            labels: labels,
                                            datasets: [
                                                {
                                                    type: 'bar',
                                                    label: 'Number of Employees',
                                                    data: values,
                                                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                                    borderColor: 'rgba(75, 192, 192, 1)',
                                                    borderWidth: 1
                                                },
                                                {
                                                    type: 'line',
                                                    label: 'Trend',
                                                    data: values,
                                                    borderColor: 'rgba(255, 99, 132, 1)',
                                                    borderWidth: 2,
                                                    fill: false
                                                }
                                            ]
                                        },
                                        options: {
                                            scales: {
                                                y: {
                                                    beginAtZero: true
                                                }
                                            }
                                        }
                                    });
                                });
                        });
                    </script>
                    <!--- <div id="bar-chart"></div> -->
                </div>

                <div class="charts-card">
                    <p class="chart-title">Purchase and Sales Orders</p>
                    <div id="area-chart"></div>
                </div>

            </div>
        </main>
        <!-- End Main -->

    </div>

    <!-- Scripts -->



    <!-- ApexCharts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.35.3/apexcharts.min.js"></script>

    <!-- Custom JS -->
    <script src="/js/scripts.js"></script>
</body>
</html>
