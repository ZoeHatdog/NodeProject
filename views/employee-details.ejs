    <style>
        .rotate-90 {
            transform: rotate(90deg);
            transition: transform 0.3s;
        }
        .rotate-0 {
            transform: rotate(0deg);
            transition: transform 0.3s;
        }
        /*Toggle Switch */
    

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 150px; /* Set width to 150px */
            height: 40px; /* Set height to 40px */
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 20px; /* Rounded corners for a height of 40px */
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px; /* Adjust font size as needed */
            padding: 0 15px; /* Adjust padding to fit text */
            text-align: center;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 32px; /* Adjust height to match new slider size */
            width: 32px; /* Adjust width to match new slider size */
            border-radius: 50%;
            left: 4px; /* Adjust position */
            bottom: 4px; /* Adjust position */
            background-color: white;
            transition: .4s;
        }

        input:checked + .slider {
            background-color: #2196F3;
        }

        input:checked + .slider:before {
            transform: translateX(110px); /* Adjust based on new width and size */
        }

        .toggle-group {
            display: flex;
            align-items: center;
            gap: 10px; /* Space between the toggle and the button */
        }

        #switchText {
            font-size: 18px; /* Match font size with slider text size */
            color: white; /* Text color to contrast with slider background */
        }
    </style>
