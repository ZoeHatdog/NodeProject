                    checkboxElement.checked = true; // Tick the checkbox if it's a valid number
                    inputElement.closest('.d-none')?.classList.remove('d-none'); // Ensure the input group is visible
                } else {
                    checkboxElement.checked = false; // Untick the checkbox
                    inputElement.closest('.d-none')?.classList.add('d-none'); // Hide the input group
                }
            });
        }


