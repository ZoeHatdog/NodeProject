<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Admin Dashboard</title>

    <!-- Montserrat Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/css/chart.css">

    <!-- ApexCharts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.35.3/apexcharts.min.js"></script>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    
    <style>
        .chart-container1{
          
            height: 250px;
            border-color: black;
            border: 2px ;
            align-items: center;
        }
        .chart-container2{
            align-items: center;
            height: 250px;
        }
        .chart-container3{
            align-items: center;
            height: 250px;
        }
        .chart-container4{
            height: 250px;
            align-items: center;
        }
        .chart-container5{
          
            height: 400px;
            
        }
        .chart-container6{
          
            height: 400px;
            align-items: center;
        }

    </style>
</head>
<body>
    <div class="grid-container">

        <!-- Header -->
        <header class="header">
            <div class="menu-icon" onclick="openSidebar()">
                <span class="material-icons-outlined">menu</span>
            </div>
            <div class="header-left">
                <span class="material-icons-outlined">search</span>
            </div>
            <div class="header-right">
                
                <span class="material-icons-outlined accountCircle" id="accountCircle">account_circle</span>
                <div id="dropdownMenu" class="dropdown">
                    <a href="#">Profile</a>
                    <a href="#">Settings</a>
                    <a class="dropdown-item" href="/logout">Logout</a>
                </div>
            </div>
        </header>
        <!-- End Header -->

        <!-- Sidebar -->
        <aside id="sidebar">
            <div class="sidebar-title">
                <div class="sidebar-brand">
                    <span class="material-icons-outlined">groups</span>
                    <a href="https://smartprobegroup.com/" target="_blank">SPI HR Management</a>
                </div>
                <span class="material-icons-outlined" onclick="closeSidebar()">close</span>
            </div>

            <ul class="sidebar-list">
                <li class="sidebar-list-item">
                    <a href="/dashboard" target="_self">
                        <span class="material-icons-outlined">dashboard</span> Dashboard
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="/registration" target="_self">
                        <span class="material-icons-outlined">inventory_2</span> Add Employee
                    </a>
                </li>                
                <li class="sidebar-list-item">
                    <a href="/delete" target="_self">
                        <span class="material-icons-outlined">fact_check</span> Delete Employee
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">add_shopping_cart</span> Update Employee
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="/seedata" target="_self">
                        <span class="material-icons-outlined">shopping_cart</span> See Data
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">poll</span> Reports
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">settings</span> Upload 
                    </a>
                </li>
            </ul>
        </aside>
        <!-- End Sidebar -->

        <!-- Main -->
        <main class="main-container">
            <div class = "row">
                <div class = "col-md-4">
                    <div class="card chart-container1">
                        <header1 class = "caption"> Age Distribution </header1>
                        <canvas id="chart1"></canvas>
                    </div>
                </div>
                <div class = "col-md-4">
                    <div class="card chart-container2">
                        <header1 class = "caption"> Department Distribution</header1>
                        <canvas id="lengthOfServiceChart"></canvas>
                    </div>
                </div>
                <div class = "col-md-4">
                    <div class="card chart-container3">
                        <header1 class = "caption"> Department by Gender </header1>
                        <canvas id="barChartCanvas"></canvas>
                    </div>
                </div>
            </div>
            <div class="row mb-3 pt-4">
                <div class="card col-12 xl-6 pt-5">
                    <canvas id="lineChartCanvas"></canvas>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card chart-container5">
                        <div id="employmentStatusChart"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card chart-container6">
                        <header class="caption"> # of Employees per Department </header>
                        <canvas id = "chart2"></canvas>
                    </div>
                </div>
            </div>
        </main>
        <!-- End Main -->
        <script>
            function renderChart(chartId, containerId) {
                fetch(`/data?chartId=${chartId}`)
                    .then(response => response.json())
                    .then(chartData => {
                        var options = {
                            chart: {
                                type: 'bar',
                                height: 350
                            },
                            series: chartData.series,
                            xaxis: {
                                categories: chartData.categories
                            }
                        };
                        var chart = new ApexCharts(document.querySelector(`#${containerId}`), options);
                        chart.render();
                    });
            }
    
            // Render the employment status chart
            renderChart('employmentStatus', 'employmentStatusChart');
        </script>
        
      
    

    </div>

    <!-- Custom JS -->
    <script src="/js/chart.js"></script>
</body>
</html>
